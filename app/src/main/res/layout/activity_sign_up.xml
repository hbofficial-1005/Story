<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp"
    android:background="#ffffff">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/story"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"/>

        <ImageView
            android:id="@+id/s_name"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_marginTop="80dp"
            android:layout_below="@id/iv2"
            app:srcCompat="@drawable/ic_name"
            android:layout_marginLeft="25dp"/>

        <ImageView
            android:id="@+id/s_menu_call"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:layout_below="@id/s_name"
            app:srcCompat="@drawable/ic_call"
            android:layout_marginLeft="25dp"/>



        <ImageView
            android:id="@+id/s_image_password"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_below="@id/s_menu_call"
            android:layout_marginTop="30dp"
            app:srcCompat="@drawable/ic_password"
            android:layout_marginLeft="25dp"/>

        <ImageView
            android:id="@+id/s_conf_pass"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:layout_below="@id/s_image_password"
            app:srcCompat="@drawable/ic_password"
            android:layout_marginLeft="25dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="10dp"
            android:textSize="15dp"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="8dp"
            android:inputType="text"
            android:layout_toRightOf="@id/s_menu_call"
            android:layout_below="@+id/iv2"
            android:maxLength="25"
            android:maxLines="1"
            android:layout_marginTop="80dp"
            android:id="@+id/name"
            android:textColor="#fdfbfb"
            android:textColorHint="#83fdfbfb"
            android:hint="Enter your Name"
            android:background="@drawable/register"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="10dp"
            android:textSize="15dp"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="8dp"
            android:inputType="number"
            android:layout_toRightOf="@id/s_menu_call"
            android:layout_below="@+id/name"
            android:maxLength="10"
            android:maxLines="1"
            android:layout_marginTop="30dp"
            android:id="@+id/s_pno"
            android:textColor="#fdfbfb"
            android:textColorHint="#83fdfbfb"
            android:hint="Enter your Contact Number"
            android:background="@drawable/register"/>
        <EditText
            android:layout_width="match_parent"
            android:textSize="15dp"
            android:layout_height="50dp"
            android:padding="10dp"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="8dp"
            android:inputType="textPassword"
            android:maxLength="20"
            android:layout_toRightOf="@id/s_image_password"
            android:maxLines="1"
            android:layout_marginTop="30dp"
            android:id="@+id/s_pass"
            android:layout_below="@id/s_pno"
            android:hint="Enter your Password"
            android:textColor="#fdfbfb"
            android:textColorHint="#83fdfbfb"
            android:background="@drawable/register"/>
        <EditText
            android:layout_width="match_parent"
            android:textSize="15dp"
            android:layout_height="50dp"
            android:padding="10dp"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="8dp"
            android:inputType="textPassword"
            android:maxLength="20"
            android:layout_toRightOf="@id/s_conf_pass"
            android:maxLines="1"
            android:layout_marginTop="30dp"
            android:id="@+id/conf_pass"
            android:layout_below="@id/s_pass"
            android:hint="Re-enter your Password"
            android:textColor="#fdfbfb"
            android:textColorHint="#83fdfbfb"
            android:background="@drawable/register"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textSize="15dp"
            android:id="@+id/signup"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:onClick="onClick"
            android:layout_below="@id/conf_pass"
            android:background="@drawable/oval"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"/>
        <TextView
            android:id="@+id/term_click"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Agree to Terms and Privacy Policy"
            android:textColor="#000000"
            android:layout_below="@id/signup"
            android:textSize="12sp"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal" />
    </RelativeLayout>
</ScrollView>